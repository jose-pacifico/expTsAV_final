<div class='col-lg-12'>
  <div class='page-header d-flex justify-content-between align-items-center'>
    <h1 id='tables'>Departamentos</h1>
    <div>
      <a href="/departamento/create/{{id}}" class='btn btn-primary'><i class='fa-solid fa-plus'></i></a>
    </div>
  </div>

  <div class='bs-component'>
    <table class='table table-hover'>
      <thead>
        <tr>
          <th scope='col'>Nome</th>
          <th scope='col'>Sigla</th>
          <th scope='col'>Opções</th>
        </tr>
      </thead>
      <tbody>
        {{#each departamentos}}
          <tr class='table-dark'>
            <th scope='row'>{{name}}</th>
            <td>{{sigla}}</td>
            <td>
              <a href="" alt="Editar"><i class="fa fa-pencil" aria-hidden="true"></i></a>
              <a href="" alt="Deletar"><i class="fa fa-eraser" aria-hidden="true"></i></a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>