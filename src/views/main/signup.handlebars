  <div class='bs-component col-lg-8'>
    <form id="signup-form" action='/signup' method='post'>
      <div class='form-group mt-2'>

        <label class='col-form-label' for='name'>Nome Completo</label>
        <input
          type='text'
          class='form-control'
          id='name'
          name='name'
        />

        <label class='col-form-label' for='name'>Senha</label>
        <input
          type='password'
          class='form-control'
          id='senha'
          name='senha'
        />

         <label class='col-form-label' for='name'>E-mail</label>
        <input
          type='email'
          class='form-control'
          id='email'
          name='email'
        />

 <label class='col-form-label' for='name'>Departamentos</label>
         <select class="form-select" id="departamentoId" name="departamentoId">
          {{#each departamentos}}
                      <option value="{{id}}">{{name}}</option>
                      {{/each}}
                    </select>

                    <div class='form-group mt-4'>
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button type='submit' class='btn btn-primary'>Salvar</button>
      </div>
           </form>
  </div>
